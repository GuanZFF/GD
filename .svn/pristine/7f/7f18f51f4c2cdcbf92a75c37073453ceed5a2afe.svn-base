					+ '<div class="carousel-option text-center">' + result[0].produceName + '</div>'
					+ '</div>'
				);
				for (var i = 1; i < result.length; i++) {
					if (result[i].produceNavImgUrl == '' || result[i].produceNavImgUrl == null) {
						result[i].produceNavImgUrl = '/images/demo1.jpg';
