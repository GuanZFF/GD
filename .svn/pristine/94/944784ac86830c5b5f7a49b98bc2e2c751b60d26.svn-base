<script>
	$(document).ready(function() {
		  // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('main'));
        var myChart1 = echarts.init(document.getElementById('main1'));

        // 指定图表的配置项和数据
        var option = {
            title: {
                text: '好评对比图'
            },
            tooltip: {},
            legend: {
                data:['好评', '差评']
            },
            xAxis: {
                data: ["衬衫","羊毛衫","雪纺衫","裤子","高跟鞋","袜子"]
            },
            yAxis: {},
            series: [{
                name: '好评',
                type: 'bar',
                data: [5, 20, 36, 10, 10, 20,]
            },{
            	name: '差评',
                type: 'bar',
                data: [5, 20, 36, 10, 10, 20,]
            }]
        };
        var optionBT = {
            title : {
                text: '好评比例',
                x:'center'
            },
            tooltip : {
                trigger: 'item',
                formatter: "{a} <br/>{b} : {c} ({d}%)"
            },
            legend: {
                orient: 'vertical',
                left: 'left',
                data: ['直接访问','邮件营销','联盟广告','视频广告','搜索引擎']
            },
            series : [
                {
                    name: '访问来源',
                    type: 'pie',
                    radius : '55%',
                    center: ['50%', '60%'],
                    data:[
                        {value:335, name:'直接访问'},
                        {value:310, name:'邮件营销'},
                        {value:234, name:'联盟广告'},
                        {value:135, name:'视频广告'},
                        {value:1548, name:'搜索引擎'}
                    ],
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                    }
                }
            ]
        };
        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);
        myChart1.setOption(optionBT);
        function initViewData() {
        	var priseComment = [];
        	var badComment = [];
        	var produceName = [];
        	for (var i = 0; i < compareProduce.length; i++) {
        		produceName.push(compareProduce[i].produceName)
        		priseComment.push(compareProduce[i].producePraiseNum);
        		badComment.push(compareProduce[i].produceBadNum);
        	}
        	var option = {
                title: {
                    text: '好评对比图'
                },
                tooltip: {},
                legend: {
                	data:['好评', '差评']
                },
                xAxis: {
                    data: produceName
                },
                yAxis: {},
                series: [{
                    name: '好评',
                    type: 'bar',
                    data: priseComment
                },{
                	name: '差评',
                    type: 'bar',
                    data: badComment
                }]
            };
        	myChart.setOption(option);
            myChart1.setOption(optionBT);
            if (table) {
				table.api().destroy();
			}
            initDataTable(compareProduce);
        }
        var table;
        /* 初始化表结构 */
		function initDataTable(data) {
			var i = 0;
			table = $('#sysdict').dataTable({
				data : data,
				searching : false,
				paging : false,
				info : false,
				ordering : false,
				columns:[{
					'render': function(data, type, full, meta) {
						return i++;
					}
				},{
					'data': 'produceName'
				},{
					'data': 'produceType'
				},{
					'data': 'producePrice'
				},{
					'render': function(data, type, full, meta) {
						return '<button class="btn btn-info rounded">删除</button>';
					}
				}]
			});
			$("#sysdict tbody button").attr("class", "btn btn-info");
		}
		var compareProduce = new Array();
        $('#addProduce').on('click', function() {
        	if ($('#produceName').val()) {
        		addProduce($('#produceName').val());
        		initViewData();
        	} else {
        		layer.msg('请商品名称');
        	}
		});
        function addProduce(produceName) {
        	$.ajax({
				data: {produceName: produceName},
				dataType: 'json',
				type: 'post',
				url: '/PC/getproduceinfobyname',
				async: false,
				success: function(result) {
					if (result) {
						console.log(result);
						compareProduce.push(result);
					} else {
						layer.msg('没有此商品');
					}
				}
			})
        }
        function getProduceDetail(produceId) {
        	$.ajax({
    			url: '/PC/getproduceinfo',
    			data: {produceId: produceId},
    			dataType: 'json',
    			type: 'post',
    			success: function(result) {
    				if (result) {
    					return result;
    				}
    			}
    		});
		}
	});
</script>

